doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="../styles.css")
        title Pelissss
    body
        main
            section.film-container
                h1 #{title}
                article.info-container
                    article.filminfo-container
                        p Year: #{year}
                        p Length: #{runtime}
                        p Genre: #{genre}
                        p Director: #{director}
                        p Writer: #{writer}
                        p Actors: #{actors}
                        p Awards: #{awards}
                        p Country: #{country}
                        p Description: #{plot}
                    article.poster-container
                        img(src=poster, alt="")
        